<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu Item -->
    <menuitem id="menu_material_root" name="Materials" sequence="10"/>

    <!-- Submenu for Material Management -->
    <menuitem id="menu_material_management" name="Material Management" parent="menu_material_root" sequence="10"/>

    <!-- Menu Item to open the Materials action -->
    <menuitem id="menu_material_material" name="Materials" parent="menu_material_management" action="action_material_material"/>

    <!-- Action for Suppliers to display res.partner (filtered for suppliers) -->
    <record id="action_supplier" model="ir.actions.act_window">
        <field name="name">Suppliers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Suppliers Menu Item -->
    <menuitem id="menu_supplier"
              name="Suppliers"
              parent="menu_material_root"
              action="action_supplier"
              sequence="20" />

</odoo>
